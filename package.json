{
  "name": "my-app",
  "version": "1.0.0",
  "private": true,
  "homepage": ".",
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "@heroicons/react": "^2.2.0",
    "@upstash/redis": "^1.35.3",
    "axios": "^1.11.0",
    "cheerio": "^1.1.2",
    "clsx": "^2.1.1",
    "date-fns": "^4.1.0",
    "dotenv": "^16.4.5",
    "framer-motion": "^11.5.4",
    "lucide-react": "^0.541.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-responsive": "^10.0.1",
    "react-router-dom": "^7.8.2",
    "react-scripts": "5.0.1",
    "swiper": "^11.2.10",
    "tailwindcss": "^3.4.17"
  },
  "devDependencies": {
    "@tailwindcss/forms": "^0.5.10",
    "@tailwindcss/typography": "^0.5.16",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@types/node": "^20.0.0",
    "@types/react": "^18.3.24",
    "@types/react-dom": "^18.3.7",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "autoprefixer": "^10.4.21",
    "gh-pages": "^6.3.0",
    "postcss": "^8.5.6",
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "typescript": "^5.0.0"
  },
  "scripts": {
    "start": "craco start",
    "build": "npm run update-data:all && craco build",
    "test": "craco test",
    "eject": "react-scripts eject",
    "lint": "eslint src --ext .ts,.tsx",
    "lint:fix": "eslint src --ext .ts,.tsx --fix",
    "predeploy": "npm run build",
    "deploy": "gh-pages -d build",
    "format": "prettier --write \"src/**/*.{ts,tsx,css,md}\"",
    "type-check": "tsc --noEmit",
    "update-data": "node src/utils/updateFootballData.js",
    "update-data:fixtures": "node src/utils/updateFootballData.js fixtures",
    "update-data:all": "node src/utils/updateFootballData.js all",
    "test-data": "node test-update.js"
  },
  "jest": {
    "moduleNameMapper": {
      "^@/(.*)$": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
